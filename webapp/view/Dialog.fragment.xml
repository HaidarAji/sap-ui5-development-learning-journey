<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="dialog" title="Info" type="Message">
        <content>
            <Text core:require="{formatMessage: 'sap/base/strings/formateMessage'}"
                text="{ parts: [ {path: 'i18n>dialogText'},
                                {path: 'customer>/CustomerName'} ],
                        formatter: 'formatMessage' }"/>
        </content>
        <beginButton>
            <Button text="Ok" press=".onCloseDialog"></Button>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>